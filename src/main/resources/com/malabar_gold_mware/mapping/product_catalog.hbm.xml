<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package = "com.qburst.malabar_gold_mware.mapping" >
 
    <class name="product"  table="product_catalog">
 
        <id name="id">
            <generator class="native"/>
        </id>
 
        <property name="ornament" type="string" column="ornament"/>
                <property name="type" type="string" column="type"/>
        
                <property name="name" type="string" column="name"/>
        
                <property name="img" type="string" column="img"/>
        
                <property name="size" type="string" column="size"/>
                <property name="gold_color" type="string" column="gold_color"/>
                <property name="stock_status" type="string" column="stock_status"/>
                <property name="weight" type="float" column="weight"/>
                <property name="gender" type="string" column="gender"/>
                <property name="brand" type="string" column="brand"/>
        
       
    </class>
    
    
 
</hibernate-mapping>